<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GupShup" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFF7DB2E</item>
        <item name="colorPrimaryVariant">#FFA000</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:itemBackground">#FDF39D</item>
    </style>

    <style name="CustomTextMenu" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" >

        <item name="android:textColor">#000</item>

    </style>
    <style name="Theme.GupShup.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GupShup.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GupShup.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
 </resources>