<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7DB2E"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="292dp"
        android:layout_height="299dp"
        android:layout_gravity="center"
        android:background="@drawable/gblogo"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/applogo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/delius_unicase"
        android:gravity="center"
        android:padding="5dp"
        android:text=" Live in your own world"
        android:textColor="#131212"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="115dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:background="@drawable/emojibg"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_baseline_emoji_emotions_24" />
</LinearLayout>