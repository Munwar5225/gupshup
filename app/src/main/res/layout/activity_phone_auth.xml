<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobilebg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SignupOptions.PhoneAuthActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/karma_medium"
        android:gravity="center"
        android:text="@string/please_type_your_phone_number"
        android:textColor="#C6000000"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingClass">

        <com.hbb20.CountryCodePicker
            android:id="@+id/cpp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            app:ccp_defaultCode="92"
            app:ccp_defaultNameCode="PK" />


        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:autofillHints=""
            android:ems="10"
            android:gravity="start"
            android:hint="*** -*******"
            android:inputType="phone"
            android:textColor="#000000"
            android:textColorHint="#1A237E" />

    </LinearLayout>

    <Button
        android:id="@+id/btnsendOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#31000000"
        android:fontFamily="@font/archivo_black"
        android:text="@string/send_otp"
        android:textSize="18sp" />


</LinearLayout>